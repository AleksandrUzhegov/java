<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DecoratorPanel>
        <g:FormPanel ui:field="form" method="POST">
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="Название:" width="100px"/>
                    <g:TextBox name="taskName" ui:field="taskName"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Владелец:" width="100px"/>
                    <g:ListBox name="ownerId" ui:field="ownerId"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Исполнитель:" width="100px"/>
                    <g:ListBox name="executorId" ui:field="executorId"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Информация:" width="100px"/>
                    <g:TextArea name="info" ui:field="info"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel spacing="10">
                    <g:Button ui:field="btnSubmit">Создать</g:Button>
                    <g:Button ui:field="btnClose">Отмена</g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:FormPanel>
    </g:DecoratorPanel>
</ui:UiBinder>